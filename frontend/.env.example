# GAAP Frontend Environment Variables
# Copy this file to .env.local for development or .env.production for production

# ============================================
# REQUIRED VARIABLES
# ============================================

# Python Backend API URL
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
PYTHON_API_URL=http://localhost:8000

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# OPTIONAL VARIABLES
# ============================================

# API Timeout (milliseconds)
API_TIMEOUT=30000

# Provider Refresh Interval (milliseconds)
PROVIDER_REFRESH_INTERVAL=30000

# Session Cache TTL (seconds)
SESSION_CACHE_TTL=300

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@yyy.ingest.sentry.io/zzz

# Vercel Analytics ID
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=xxx

# ============================================
# SECURITY (Production Only)
# ============================================

# CORS Origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
# RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/Disable features
NEXT_PUBLIC_ENABLE_RESEARCH_MODULE=true
NEXT_PUBLIC_ENABLE_SESSION_EXPORT=true
NEXT_PUBLIC_ENABLE_PROVIDER_MANAGEMENT=true
