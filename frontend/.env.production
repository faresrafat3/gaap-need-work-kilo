# GAAP Frontend Production Environment
# Copy this file to .env.local and fill in your values

# Python Backend API URL
PYTHON_API_URL=http://localhost:8000

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Timeout (milliseconds)
API_TIMEOUT=60000

# Provider Refresh Interval (milliseconds)
PROVIDER_REFRESH_INTERVAL=60000

# Session Cache TTL (seconds)
SESSION_CACHE_TTL=600

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=

# Vercel Analytics ID (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_RESEARCH_MODULE=true
NEXT_PUBLIC_ENABLE_SESSION_EXPORT=true
NEXT_PUBLIC_ENABLE_PROVIDER_MANAGEMENT=true
